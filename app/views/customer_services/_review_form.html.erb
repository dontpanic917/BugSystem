
<div>
  <h1>Review Form</h1>
</div>

<div>
  <%byebug%>
  <%=form_for @customer_service.customer_reviews.build do |f|%>
    <%= f.label :rating%>
    <%= f.text_field :rating%>
    <%= f.label :description%>
    <%= f.text_field :description%>
    <%= f.hidden_field :customer_id, value: @customer_service.customer.id%>
    <%= f.hidden_field :employee_id, value: @customer_service.task.employee.id%>
    <%= f.hidden_field :task_id, value: @customer_service.task.id%>
    <%= f.hidden_field :ticket_id, value: @customer_service.id%>
    <%=f.submit "Submit Review"%>
  <%end%>
</div>
