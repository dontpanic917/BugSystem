

<%if @user.name == "Employee"%>
  <p><%=@bug.task.employee.name%></p>
  <%if @bug.completed == true%>
    <p>Problem Solved</p>
    <%= @bug.solution_description%>
    <%= @bug.customer.name%>
    <%= link_to "Back", employee_path(@bug.task.employee)%>
  <%elsif params[:type] == nil%>
    <%= form_tag do |t|%>
      <%=radio_button_tag "type", '1'%>
      <%= label_tag "Solve this Problem?"%><br><br>
      <%=submit_tag "Submit"%>
    <%end%><br><br><br>
  <%else%>
    <%= render "form"%>
  <%end%>
  <%elsif @user.name == "Customer"%>
    <p><%=@bug.customer.name%></p>
    <p>Solution - <%= @bug.solution_description%></p>
    <%= link_to "Back", customer_path(@bug.customer)%>
<%end%>
